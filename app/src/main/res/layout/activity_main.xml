<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.jamk.basicuicontrols.MainActivity">

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="Button"
        android:onClick="SelectButtonClicked"
        app:layout_constraintTop_toBottomOf="@+id/foodRadioGroup"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:id="@+id/foodRadioGroup"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/ramenRadioButton"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="@string/ramen" />

        <RadioButton
            android:id="@+id/sushiRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/sushi" />

        <RadioButton
            android:id="@+id/broccoliRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/broccoli" />

        <RadioButton
            android:id="@+id/tomatoesRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tomatoes" />

        <RadioButton
            android:id="@+id/Cucumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cucumber" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
